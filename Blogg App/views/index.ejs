<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <title>Blog</title>
</head>
<body>
    <header>
        <h1>Blog</h1>
        <a href="/posts/create">Create New Post</a>
    </header>
    <main>
        <% if (posts.length > 0) { %>
            <ul>
                <% posts.forEach(post => { %>
                    <li>
                        <a href="/posts/<%= post.id %>"><%= post.title %></a>
                    </li>
                <% }); %>
            </ul>
        <% } else { %>
            <p>No posts yet.</p>
        <% } %>
    </main>
</body>
</html>
